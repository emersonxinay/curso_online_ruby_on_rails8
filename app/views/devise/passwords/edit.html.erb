<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-6">
  <h2 class="text-2xl font-semibold text-gray-800 text-center mb-4">
    🔑 Cambiar contraseña
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "Nueva contraseña", class: "block text-gray-700 font-medium" %>
      <% if @minimum_password_length %>
        <small class="text-gray-500">Mínimo <%= @minimum_password_length %> caracteres</small>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex justify-between items-center">
      <%= f.submit "Cambiar contraseña", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" %>
      <%= link_to "⬅️ Volver", :back, class: "text-gray-600 hover:underline" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
