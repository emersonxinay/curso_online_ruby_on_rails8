<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Instructor Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-xl font-semibold mb-2">Total Students</h3>
      <p class="text-3xl font-bold text-indigo-600"><%= @total_students %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-xl font-semibold mb-2">Total Earnings</h3>
      <p class="text-3xl font-bold text-indigo-600">$<%= @total_earnings %></p>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold">Your Courses</h2>
      <%= link_to "Create New Course", new_course_path, 
          class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @courses.each do |course| %>
        <div class="border rounded-lg overflow-hidden">
          <% if course.cover_image.attached? %>
            <%= image_tag course.cover_image, class: "w-full h-48 object-cover" %>
          <% end %>
          
          <div class="p-4">
            <h3 class="font-semibold text-lg mb-2"><%= course.title %></h3>
            <p class="text-gray-600 mb-4">
              <%= pluralize(course.enrollments.count, 'student') %> enrolled
            </p>
            
            <div class="flex justify-between items-center">
              <%= link_to "Edit", edit_course_path(course), 
                  class: "text-indigo-600 hover:text-indigo-800" %>
              <%= link_to "View", course_path(course), 
                  class: "bg-indigo-600 text-white px-3 py-1 rounded hover:bg-indigo-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>