<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <% if course.cover_image.attached? %>
    <%= image_tag course.cover_image, class: "w-full h-48 object-cover" %>
  <% else %>
    <div class="w-full h-48 bg-gray-200"></div>
  <% end %>
  
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2"><%= course.title %></h3>
    <p class="text-gray-600 mb-4"><%= truncate(course.description.to_plain_text, length: 100) %></p>
    
    <div class="flex items-center justify-between">
      <span class="text-lg font-bold text-indigo-600">$<%= course.price %></span>
      <%= link_to "View Course", course_path(course), class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
    </div>
  </div>
</div>