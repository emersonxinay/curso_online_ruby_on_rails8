<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-8 text-center">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Certificado de Finalización</h1>
        <p class="text-gray-600">Este certificado verifica que</p>
      </div>
      
      <div class="mb-8">
        <h2 class="text-4xl font-bold text-indigo-700 mb-2"><%= @certificate.user.name %></h2>
        <p class="text-gray-600">ha completado exitosamente el curso</p>
        <h3 class="text-2xl font-bold text-gray-800 mt-2"><%= @certificate.course.title %></h3>
      </div>
      
      <div class="border-t border-b border-gray-200 py-6 mb-6">
        <p class="text-gray-600">Emitido el <%= l @certificate.issued_at, format: :long %></p>
        <p class="text-gray-600 mt-2">Certificado ID: <%= @certificate.id %></p>
      </div>
      
      <div class="flex justify-center space-x-4 mb-6">
        <div class="text-center">
          <div class="text-gray-600 mb-1">Instructor</div>
          <div class="font-medium"><%= @certificate.course.instructor.name %></div>
        </div>
        
        <div class="text-center">
          <div class="text-gray-600 mb-1">Plataforma</div>
          <div class="font-medium">Cursos Online</div>
        </div>
      </div>
      
      <div class="mt-8">
        <%= link_to download_certificate_path(@certificate, format: :pdf),
            class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700" do %>
          <i class="fas fa-download mr-2"></i> Descargar Certificado
        <% end %>
        
        <%= link_to "Volver a mis cursos", enrolled_courses_path, 
            class: "inline-flex items-center px-6 py-3 ml-4 bg-gray-200 text-gray-800 font-medium rounded-lg hover:bg-gray-300" %>
      </div>
    </div>
  </div>
  
  <div class="mt-8">
    <h3 class="text-xl font-semibold mb-4">Comparte tu logro</h3>
    <div class="flex space-x-4">
      <a href="https://twitter.com/intent/tweet?text=¡He completado el curso <%= @certificate.course.title %> en Cursos Online!" target="_blank" class="bg-blue-400 text-white p-3 rounded-full hover:bg-blue-500">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= request.original_url %>" target="_blank" class="bg-blue-700 text-white p-3 rounded-full hover:bg-blue-800">
        <i class="fab fa-linkedin-in"></i>
      </a>
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" class="bg-blue-600 text-white p-3 rounded-full hover:bg-blue-700">
        <i class="fab fa-facebook-f"></i>
      </a>
    </div>
  </div>
</div>
